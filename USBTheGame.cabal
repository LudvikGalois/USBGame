-- README.
-- extra-source-files:  

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.10

library 
  hs-source-dirs:      sdlimage
  default-language:    Haskell2010
  default-extensions:  CPP, ForeignFunctionInterface
  exposed-modules:     Graphics.UI.SDL.Image, Graphics.UI.SDL.Mixer
  build-depends:       base >=4.7 && <4.8, sdl2 >= 1.0.2
  includes:            SDL_image.h
  extra-libraries:     SDL2 SDL2_image SDL2_mixer


executable USBTheGame
  -- .hs or .lhs file containing the Main module.
  main-is:             Main.hs
  
  -- Modules included in this executable, other than Main.
  -- other-modules:       
  
  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:    
  
  -- Other library packages from which modules are imported.
